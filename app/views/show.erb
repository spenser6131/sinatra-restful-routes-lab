<h1><%= @recipe.name %></h1>
<h2><%= @recipe.cook_time %></h2>
<h3><%= @recipe.ingredients %></h3>
<a href="/recipes/<%= @recipe.id %>/edit">Edit this recipe</a>


<form id="delete" action="/recipes/<%= @recipe.id %>" method ="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" id="delete" value="Delete this recipe">
</form>